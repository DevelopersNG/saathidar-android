<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="My Account"
        android:fontFamily="@font/italic"
        android:textSize="16dp"
        android:textStyle="bold"
        android:translationZ="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        android:translationZ="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/italic"
                android:text="Email"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvEmailShow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:fontFamily="@font/italic"
                style="@style/PersonalDataTextView"
                android:text="durga.singh@gmail.com"/>


            <LinearLayout
                android:id="@+id/llShowpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/italic"
                    android:layout_height="wrap_content"
                    android:text="Password" />



                <TextView
                    android:id="@+id/tvPasswordShow"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:fontFamily="@font/italic"
                    style="@style/PersonalDataTextView"
                    android:text="*******" />


                <EditText
                    android:id="@+id/etOldPassword"
                    style="@style/PersonalDataTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:hint="Old password" />


                <EditText
                    android:id="@+id/etNewPassword"
                    style="@style/PersonalDataTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:fontFamily="@font/italic"
                    android:layout_marginTop="10dp"
                    android:hint="New password"
                    android:text="" />

                <TextView
                    android:id="@+id/tvEditPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:text="Edit"
                    android:fontFamily="@font/italic"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/llSavePasswordbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSavePass"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_hover"
                        android:padding="5dp"
                        android:text="Save"
                        android:gravity="center"
                        android:fontFamily="@font/italic"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:translationZ="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="or"
                        android:fontFamily="@font/italic"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCancelPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="cancel"
                        android:gravity="center"
                        android:fontFamily="@font/italic"
                        android:textAlignment="center"
                        android:textColor="#00BFA5"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>